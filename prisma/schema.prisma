generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  name      String
  address   String
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now())
}

model Inspection {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  roof        String
  siding      String
  windows     String
  notes       String?
  createdAt   DateTime @default(now())
  photos      Photo[]
}

model Photo {
  id        String    @id @default(cuid())
  inspectionId String
  inspection Inspection @relation(fields: [inspectionId], references: [id])
  filename  String
  url       String
  createdAt DateTime  @default(now())
}
